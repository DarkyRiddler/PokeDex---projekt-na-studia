generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         Int         @id @default(autoincrement())
  login      String      @unique
  email      String      @unique
  password   String      // W praktyce: hash hasła!
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  
  // Relacje
  favourites Favourite[]  // Ulubione pokemony użytkownika
  teams      Team[]       // Zespoły użytkownika
  
  @@map("users")
}

model Favourite {
  id        Int      @id @default(autoincrement())
  userId    Int      // Klucz obcy do User
  pokemonId Int      // ID pokemona z PokeAPI
  
  // Relacje
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Unikalna kombinacja user + pokemon
  @@unique([userId, pokemonId])
  @@map("favourites")
}

model Team {
  id        Int      @id @default(autoincrement())
  name      String?  // Opcjonalna nazwa zespołu
  userId    Int      // Klucz obcy do User
  pokemons  Int[]    // Tablica ID pokemonów
  
  // Relacje
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("teams")
}